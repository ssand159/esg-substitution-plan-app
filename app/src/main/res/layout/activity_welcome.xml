<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="#fff"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="50dp">
        <TextView
            android:id="@+id/welcomeText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <ImageButton
            android:id="@+id/welcomeButton1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/welcomeText1"
            android:src="@drawable/ic_down"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:onClick="clickButton1"
            android:contentDescription="@string/main_buttonSettings" />
        <TextView
            android:id="@+id/welcomeText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText1"
            android:gravity="center"
            android:text="@string/welcome_text2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="15dp"
            android:visibility="invisible"
            />
        <ImageButton
            android:id="@+id/welcomeButton2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/welcomeText2"
            android:src="@drawable/ic_down"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:onClick="clickButton2"
            android:contentDescription="@string/main_buttonSettings"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/welcomeText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText2"
            android:gravity="center"
            android:text="@string/welcome_text3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="15dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/welcomeButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText3"
            android:layout_gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:padding="10dp"
            android:text="@string/welcome_button"
            android:textColor="#fff"
            android:gravity="center"
            android:onClick="finish"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/button"
            android:visibility="invisible"
            />

    </RelativeLayout>

</ScrollView>